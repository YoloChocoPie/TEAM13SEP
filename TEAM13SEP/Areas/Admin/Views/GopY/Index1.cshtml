﻿@model IEnumerable<TEAM13SEP.Models.GOPY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Styles -->





<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h1>Hello @Session["user-fullname"], <span>Welcome Here</span></h1>
            </div>
        </div>
    </div>
    <!-- /# column -->
    <div class="col-lg-4 p-l-0 title-margin-left">
        <div class="page-header">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="~/Admin/GopY">Giao diện quản lý Góp ý Đã được Duyệt</a></li>

                </ol>
            </div>
        </div>
    </div>
    <!-- /# column -->
</div>




<div class="col-lg-12">
    <div class="card alert">
        <div class="bootstrap-data-table-panel">
            <div class="table-responsive">
                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                    <thead>
                        <tr>

                            <th>
                                Tên Góp Ý
                            </th>
                            <th>
                                Tên chủ đề
                            </th>
                            <th>
                                Tên sinh viên
                            </th>
                            <th>
                                Nội dung
                            </th>
                            <th>
                                ngày tạo
                            </th>

                            <th>

                            </th>
                        </tr>
                    </thead>


                    @foreach (var item in Model.Where(w => w.TRANGTHAI.ID == 2))
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.GOPY_TEN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CHUDE.CHUDE_NAME)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.SINHVIEN.HOTEN_SV)
                            </td>
                            <td>

                                @MvcHtmlString.Create(item.NOIDUNG_GOPY)

                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DATE)
                            </td>

                            <td>

                                @Html.ActionLink("Tuỳ Chỉnh", "Edit", new { id = item.ID }) <br /> || <br />
                                @* @Html.ActionLink("Details", "Details", new { id = item.ID }) *@
                                @Html.ActionLink("Xoá", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }





                </table>
            </div>

            <!-- /.table-responsive -->
        </div>
    </div>
</div>







<div id="search">
    <button type="button" class="close">×</button>
    <form>
        <input type="search" value="" placeholder="type keyword(s) here" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>




