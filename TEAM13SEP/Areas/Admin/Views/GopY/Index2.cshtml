﻿@model IEnumerable<TEAM13SEP.Models.GOPY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Styles -->
<link href="@Url.Content("~/AdminPlugin/assets/css_login/style.css")" rel="stylesheet">




<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h5 style="width:100% ; line-height:47px; font-size:16px;"> Chào mừng tới trang quản trị</h5>
            </div>

        </div>
    </div>
    <!-- /# column -->
    <div class="col-lg-4 p-l-0 title-margin-left">
        <div class="page-header">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="~/Admin/GopY" style="color: blue; font-size: 16px;"><b>Danh sách các góp ý đã trả lời</b></a></li>

                </ol>
            </div>
        </div>
    </div>
    <!-- /# column -->
</div>




<div class="col-lg-12">
    <div class="card alert">
        <div class="bootstrap-data-table-panel">
            <div class="table-responsive">
                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                    <thead>
                        <tr>

                            <th>
                                Chủ đề
                            </th>
                            @*       <th>
                                    Tên chủ đề
                                </th>*@
                            @*   <th>
                                    Tên người thực hiện
                                </th>*@

                            <th>
                                Tên sinh viên
                            </th>
                            <th>
                                Nội dung
                            </th>
                            <th>
                                Câu trả lời

                            </th>

                            <th>
                                Lượt Tim
                            </th>
                            <th>
                                Ngày tạo
                            </th>
                            @**@

                            <th>

                            </th>


                        </tr>
                    </thead>


                    @foreach (var item in Model.Where(w => w.TRANGTHAI.ID == 3))
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.CHUDE.CHUDE_NAME)
                            </td>
                            @* <td>
                                    @Html.DisplayFor(modelItem => item.CHUDE.CHUDE_NAME)
                                </td>*@
                            @*   <td>
                                    @Html.DisplayFor(modelItem => item.ADMIN.FULL_NAME)
                                </td>*@

                            <td>
                                @Html.DisplayFor(modelItem => item.SINHVIEN.HOTEN_SV)
                            </td>
                            <td>

                                @MvcHtmlString.Create(item.NOIDUNG_GOPY)

                            </td>
                            <td>
                                <div>
                                    @MvcHtmlString.Create(item.TRALOI_GOPY)
                                </div>

                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.nutLIKE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DATE)
                            </td>



                            <td>

                          
                            
                                @Html.ActionLink("Chỉnh sửa", "EditDaTraLoi", new { id = item.ID }) <br /> || <br />
                                @Html.ActionLink("Xoá", "Delete2", new { id = item.ID })
                            </td>
                        </tr>
                    }





                </table>
            </div>

            <!-- /.table-responsive -->
        </div>
    </div>
</div>

<div id="search">
    <button type="button" class="close">×</button>
